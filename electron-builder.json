{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.dipjyotimetia.restura",
  "productName": "Restura",
  "copyright": "Copyright Â© 2025 Restura",
  "directories": {
    "output": "dist/installers",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist/electron/**/*",
    "electron/resources/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist/electron/main/main.js"
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "electron/resources/icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/resources/entitlements.mac.plist",
    "entitlementsInherit": "electron/resources/entitlements.mac.plist",
    "notarize": {
      "teamId": "${env.APPLE_TEAM_ID}"
    }
  },
  "afterSign": "scripts/notarize.js",
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "icon": "electron/resources/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Restura",
    "verifyUpdateCodeSignature": true,
    "signAndEditExecutable": true
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Restura",
    "differentialPackage": true
  },
  "linux": {
    "icon": "electron/resources/icons",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "category": "Development",
    "maintainer": "dipjyotimetia",
    "vendor": "Restura",
    "synopsis": "Restura - Multi-Protocol API Client",
    "description": "Restura - A modern API client for testing HTTP and gRPC endpoints"
  },
  "publish": {
    "provider": "github",
    "owner": "dipjyotimetia",
    "repo": "restura",
    "releaseType": "release"
  },
  "asar": true,
  "compression": "maximum",
  "removePackageScripts": true,
  "electronDownload": {
    "cache": "./cache"
  }
}

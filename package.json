{
  "name": "restura",
  "version": "0.1.0",
  "private": true,
  "description": "Restura - A modern multi-protocol API client for HTTP and gRPC testing",
  "author": "dipjyotimetia",
  "license": "MIT",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "tsc --noEmit && echo 'Linting passed (TypeScript only)'",
    "lint:fix": "tsc --noEmit && echo 'Linting passed (TypeScript only)'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "validate": "npm run type-check && npm run lint && npm run test:run",
    "prepare": "husky",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build:next": "cross-env ELECTRON_BUILD=true next build",
    "electron:build:all": "npm run electron:build:next && npm run electron:compile",
    "electron:dist": "npm run electron:build:all && electron-builder",
    "electron:dist:mac": "npm run electron:build:all && electron-builder --mac",
    "electron:dist:win": "npm run electron:build:all && electron-builder --win",
    "electron:dist:linux": "npm run electron:build:all && electron-builder --linux",
    "electron:pack": "npm run electron:build:all && electron-builder --dir",
    "electron:icons": "node scripts/generate-icons.js",
    "electron:publish": "npm run electron:build:all && electron-builder --publish always",
    "electron:publish:mac": "npm run electron:build:all && electron-builder --mac --publish always",
    "electron:publish:win": "npm run electron:build:all && electron-builder --win --publish always",
    "electron:publish:linux": "npm run electron:build:all && electron-builder --linux --publish always",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@bufbuild/protobuf": "^2.10.1",
    "@connectrpc/connect": "^2.1.1",
    "@connectrpc/connect-node": "^2.1.1",
    "@connectrpc/connect-web": "^2.1.1",
    "@graphiql/toolkit": "^0.11.3",
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "@monaco-editor/react": "^4.7.0",
    "@protobuf-ts/runtime": "^2.11.1",
    "@protobuf-ts/runtime-rpc": "^2.11.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/tough-cookie": "^4.0.5",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dexie": "^4.2.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.24",
    "graphql": "^16.12.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.553.0",
    "monaco-editor": "^0.52.2",
    "next": "^16.0.9",
    "next-themes": "^0.4.6",
    "postman-collection": "^5.2.0",
    "quickjs-emscripten": "^0.31.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-resizable-panels": "^3.0.6",
    "react-syntax-highlighter": "^16.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tough-cookie": "^6.0.0",
    "uuid": "^11.1.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.1",
    "@types/postman-collection": "^3.5.11",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.0.3",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "vitest": "^4.0.9",
    "wait-on": "^7.2.0"
  },
  "optionalDependencies": {
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "build": {
    "extends": "./electron-builder.json"
  }
}
